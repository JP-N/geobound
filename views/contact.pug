            ellipse.car__wheel--left(stroke-width='3.2' fill='#000' cx='83.493' cy='30.25' rx='6.922' ry='6.808')
            ellipse.car__wheel--right(stroke-width='3.2' fill='#000' cx='46.511' cy='30.25' rx='6.922' ry='6.808')
